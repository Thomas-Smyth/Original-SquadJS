  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "discord-cli": "babel-node ./src/utils/discord-tools-cli.js",
    "deploy": "pm2 stop SquadJS && npm run build && pm2 start ecosystem.config.js --env production",
    "dev": "nodemon index.js",
    "build": "rimraf build && babel src -d build --copy-files --source-maps",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\""
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/runtime": "^7.4.5",
